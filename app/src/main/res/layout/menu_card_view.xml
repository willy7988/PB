<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_view_cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/title_descroption_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:text="1"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/item_number"
                    android:text="WWW"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maintenance_selection"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7.50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/renew_tank_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Renew Tank" />

                <Button
                    android:id="@+id/clean_manifold_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Clean Monifold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fluid_path_selection"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7.50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rinse_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Rinse" />

                <Button
                    android:id="@+id/prime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Prime" />

                <Button
                    android:id="@+id/rinse_prime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Rinse/Prime" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_time_selection"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="7.50"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/date_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="Date" />

                <Button
                    android:id="@+id/time_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:text="time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/language_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7.50"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/language_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/english_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="English" />

                    <RadioButton
                        android:id="@+id/chinese_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="中文" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>